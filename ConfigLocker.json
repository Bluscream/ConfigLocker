{
	"Logging": {
		"NLog": {
			"IncludeScopes": false,
			"ParseMessageTemplates": true,
			"CaptureMessageProperties": true
		}
	},
	"NLog": {
		"autoreload": true,
		"internalLogLevel": "Info",
		"internalLogFile": "${environment:TEMP}\\ConfigLocker-internal.log",
		"throwConfigExceptions": true,
		"targets": {
			"console": {
				"type": "Console",
				"layout": "${date}|${level:uppercase=true}|${message} ${exception:format=tostring}|${logger}|${all-event-properties}"
			},
			"file": {
				"type": "AsyncWrapper",
				"target": {
					"wrappedFile": {
						"type": "File",
						"fileName": "${environment:TEMP}\\ConfigLocker.log",
						"layout": {
							"type": "JsonLayout",
							"Attributes": [
								{
									"name": "timestamp",
									"layout": "${date:format=o}"
								},
								{
									"name": "level",
									"layout": "${level}"
								},
								{
									"name": "logger",
									"layout": "${logger}"
								},
								{
									"name": "message",
									"layout": "${message:raw=true}"
								},
								{
									"name": "properties",
									"encode": false,
									"layout": {
										"type": "JsonLayout",
										"includeallproperties": "true"
									}
								}
							]
						}
					}
				}
			}
		},
		"rules": [
			{
				"logger": "*",
				"minLevel": "Trace",
				"writeTo": "File,Console"
			}
		]
	},
	"watchers": [
		{
			"name": "JSON Config Example",
			"description": "Watches JSON configuration files and merges changes",
			"type": "JSON",
			"enabled": true,
			"inputs": [
				"./examples/input1.json",
				"./examples/input2.json"
			],
			"output": "./examples/output.json",
			"checkonchange": true,
			"checkonstartup": true,
			"checkevery": "00:30:00"
		},
		{
			"name": "XML Config Example",
			"description": "Watches XML configuration files and merges changes",
			"type": "XML",
			"enabled": true,
			"inputs": [
				"./examples/input1.xml",
				"./examples/input2.xml"
			],
			"output": "./examples/output.xml",
			"checkonchange": true,
			"checkonstartup": true,
			"checkevery": "00:30:00"
		},
		{
			"name": "INI Config Example",
			"description": "Watches INI configuration files and merges changes",
			"type": "INI",
			"enabled": true,
			"inputs": [
				"./examples/input1.ini",
				"./examples/input2.ini"
			],
			"output": "./examples/output.ini",
			"checkonchange": true,
			"checkonstartup": true,
			"checkevery": "00:30:00"
		},
		{
			"name": "PlainText Config Example",
			"description": "Watches plaintext files and overwrites the entire content",
			"type": "PlainText",
			"enabled": true,
			"inputs": [
				"./examples/input1.txt",
				"./examples/input2.txt"
			],
			"output": "./examples/output.txt",
			"checkonchange": true,
			"checkonstartup": true,
			"checkevery": "00:30:00"
		}
	]
}